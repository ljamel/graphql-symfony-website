{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}

    <style>
        #header{
            min-height: 370px!important;
        }
        .row.animated {
            opacity: 1;
        }
    </style>
    <article id="content">
        <section class="">
            <div class="container content-padding-lg parallax-container" data-stellar-offset-parent="true">
              <div class="row animated">
                    <div class="col-sm-6">
                        <img src="{{ resultPage.img }}" class="wp-image" alt="" />
                    </div>
                    <div class="col-sm-6">
                        <h2><small></small>{{ resultPage.title }}</h2>
                        <p class="lead">{{ resultPage.description }}</p>
                        <p>Adresse: {{ resultPage.address }} {{ resultPage.postcode }}</p>
                        <p>Ville: {{ resultPage.ville }}</p>
                        Lien: <a href="{{ resultPage.link }}" class="btn btn-inline">{{ resultPage.title }}</a>
                    </div>
                </div><!-- .row -->
                <div class="row animated">
                    <div class="col-sm-6 col-sm-offset-3 text-center">
                        <h2 class="text-uppercase text-center">Tarif</h2>
                        <table class="table table-responsive">
                            <tbody>
                            <tr>
                                <td class="text-left"><strong>A partir de</strong></td>
                                <td class="text-right">{{ resultPage.prices }} â‚¬</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- .container -->
        </section>
        <section class="fullwidth-row bg-2 fixed cover">
            <div class="container content-padding-lg content-padding-mobile-none">
                <div class="row animated">
                    <div class="col-sm-8 col-sm-offset-2 content-padding white-box">

                        {%  for Leisure in Leisures %}

                            <div class="item">
                                <a href="{{ path('page', {slug: Leisure.slug})}}" class="link-image"><img src="{{  Leisure.img }}" alt=""></a>
                                <div class="item-content">
                                    <h4><a href="{{ path('page', {slug: Leisure.slug})}}">{{ Leisure.title }}</a></h4>
                                    <p>{{ Leisure.description|slice(0,150) }} </p>
                                </div>
                            </div>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </section><!-- .fullwidth-row -->
    </article><!-- #content -->
{% endblock %}
